def main():
    num = int(input("Enter number: "))
    choice = int(input("Check\n\t1. Odd\n\t2. Even\nEnter Choice: "))
    
    if choice == 1:
        result = is_even(num)
        print(result)
    elif choice == 2:
        res = is_odd(num)
        print(result)
    else:
        print("Invalid Input")

    # Tests
    assert is_even(4)
    assert is_odd(7)


def is_even(num):
    result = False
    if num % 2 == 0:
        result = True

    return result


def is_odd(num):
    result = False
    if num % 2 != 0:
        result = True

    return result


if __name__ == "__main__":
    main()
